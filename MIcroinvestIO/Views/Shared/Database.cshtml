@model MIcroinvestIO.Models.Database
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    
    <div class="form-group">
        <label>DatabaseIp:</label>
        <input asp-for="Ip" class="text-links"  />
    </div>
    <br />
    <div class="form-group">
        <label>DatabaseName:</label>
        <input asp-for="DatabaseName" class="text-links"  />
    </div>
    <br />
    <div class="form-group">
        <label>User:</label>
        <input asp-for="User" class="text-links" />
    </div>
    <br />
    <div class="form-group">
        <label>Password:</label>
        <input asp-for="Password" class="text-links"/>
    </div>
    <br />
    <div class="form-group">
        @if (Model.Success == "Success!")
        {
            <p class="alert-success">@Model.Success</p>
        }
        else
        {
            <p class="alert-danger">@Model.Success</p>
        }
    </div>
    <br />
    <button type="submit" class="btn btn-secondary">Update</button>
</form>